<!DOCTYPE html>
<html>
    <head>
        <meta charset='utf-8'/>
        <title>税抜き計算</title>
        <style>
            body{font:12px/1.2 Verdana, sans-serif; padding:0 10px;}
            a:link, a:visited{text-decoration:none; color:#416CE5; border-bottom:1px solid #416CE5;}
            h2{font-size:13px; margin:15px 0 0 0;}
        </style>
</head>

    <body>
        <form action="#" method="POST" id="shopInfo">
            <label for="includingTax">税抜価格</label>
            <input name="includingTax" class="includingTax" type="textbox" placeholder="ex) 10000">円
            <input type="button" class="excludingTax" value="税込価格から税抜価格を計算する" href='#'>     
        </form>



<!-- ↑元indexのコード ↓統合させるための新たな記述-->
        <script>
            $(document).ready(function(){
                var tmpl = $("#colorbox_tmpl");
                $(".excludingTax").colorbox({
                    rel:'excludingTax', 
                    html: tmpl.html(),
                    closeButton: false,
                    onComplete:function(){
                        var priceFromForm = $(".includingTax").val()
                        $("#includingTax2").val(priceFromForm);

                        $("#calcExcludingTax").on("click", function(){
                            var includingTaxPrice = $("#includingTax2").val()
                            excludingTaxPrice = Math.floor(Number(includingTaxPrice) / 1.08);  
                            $(".includingTax").val(excludingTaxPrice);
                            });
                        }
                    });
                });
        </script>
        <script id="colorbox_tmpl" type="text/x-spmkt">
        <div class="wrapper">
            <p>税込価格</p>
            <input type="textbox" id="includingTax2" class="includngTax2" placeholder="ex) 10000">
            <br />
            <br />
            <input type="button" class="closeWindow" value="税抜価格を計算する" id="calcExcludingTax" onClick="parent.$.colorbox.close();" href="#">
            </div>
        </script>         
    </body>
</html>


